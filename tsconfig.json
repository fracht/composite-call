{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["ES2015"],
        "rootDir": "src",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests", "example"]
}
